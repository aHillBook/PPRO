@using Skoleni.Models;
@model Termin

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pozadiUvodu">
    <div class="pozadi-fialovo-modraa">
        <div class="nadpis">
            <div class="nadpis-blok">
                <h1 class="nadpis-blok-h1">Smazání termínu</h1>
            </div>
        </div>
        <div class="vyvysenyBod"></div>
    </div>
</div>

<div id="shortBlok">
    <div style="padding: 10px;">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div class="mN">
                    <label asp-for="terminKonani">Termín</label>
                </div>
                <div class="mD">
                    <input asp-for="terminKonani" class="textPole" readonly="readonly" />
                </div>
                <div class="mN">
                    <label asp-for="skoleni.nazev">Školení</label>
                </div>
                <div class="mD">
                    <input asp-for="skoleni.nazev" class="textPole" readonly="readonly" />
                </div>
                <div class="mN">
                    <label asp-for="mistnost.nazev">Místnost</label>
                </div>
                <div class="mD">
                    <input asp-for="mistnost.nazev" class="textPole" readonly="readonly" />
                </div>
                <div class="mN">
                    <label asp-for="dobaTrvani">Doba trvání</label>
                </div>
                <div class="mD">
                    <input asp-for="dobaTrvani" class="textPole" readonly="readonly" />
                </div>
                <div class="mN">
                    <label asp-for="jazyk.nazev">Jazyk</label>
                </div>
                <div class="mD">
                    <input asp-for="jazyk.nazev" class="textPole" readonly="readonly" />
                </div>
            </div>
            <div id="tlacitkaPopisku">
                <button type="submit" value="Create" class="tlacitkoPouzit">Smazat</button>
                <a asp-action="Index" class="tlacitkoReset">Zpět</a>
            </div>
        </form>
    </div>
</div>

