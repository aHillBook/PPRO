@using Skoleni.Models;
@model Mistnost

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pozadiUvodu">
    <div class="pozadi-cerveno-fialova">
        <div class="nadpis">
            <div class="nadpis-blok">
                <h1 class="nadpis-blok-h1">Editace místnosti</h1>
            </div>
        </div>
        <div class="vyvysenyBod"></div>
    </div>
</div>
<div id="shortBlok">
    <div style="padding: 10px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div class="mN">
                    <label asp-for="nazev">Název</label>
                    <input type="hidden" asp-for="idMistnosti" />
                </div>
                <div class="mD">
                    <input asp-for="nazev" class="textPole" />
                    <div style="margin-top:-15px">
                        <span asp-validation-for="nazev" style="color:red;"></span>
                    </div>
                </div>
                <div class="mN">
                    <label asp-for="kapacita">Kapacita</label>
                </div>
                <div class="mD">
                    <input asp-for="kapacita" class="textPole" />
                    <div style="margin-top:-15px">
                        <span asp-validation-for="kapacita" style="color:red;"></span>
                    </div>
                </div>
            </div>
            <div id="tlacitkaPopisku" style="margin-top:20px">
                <button type="submit" value="Create" class="tlacitkoPouzit">Odeslat</button>
                <a asp-action="Index" class="tlacitkoReset">Zpět</a>
            </div>
        </form>
    </div>
</div>
