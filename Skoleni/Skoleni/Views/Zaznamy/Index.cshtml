@model IEnumerable<Skoleni.Models.Zaznam>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <div id="novy">
        <a asp-action="Create"><div id="novyIkona"></div></a>
    </div>
    <div id="kmu">
        <a asp-action="Index" asp-controller="Home"><div id="kmuIkona"></div></a>
    </div>
</p>

<div class="seznamKmu">

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.datumPrihlaseni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.termin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.uzivatel)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.datumPrihlaseni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.termin.idTerminu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.uzivatel.idUzivatele)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.idZaznamu">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.idZaznamu">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.idZaznamu">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div id="odspodu" />
<div class="novyIkonaNapoveda">
    Přidat nový záznam
</div>

<div class="kmuIkonaNapoveda">
    Zpět na hlavní nabídku
</div>


