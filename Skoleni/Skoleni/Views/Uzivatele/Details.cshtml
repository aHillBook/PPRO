@using Skoleni.Models;
@model Uzivatel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pozadiUvodu">
    <div class="pozadi-zeleno-zelena">
        <div class="nadpis">
            <div class="nadpis-blok">
                <h1 class="nadpis-blok-h1">Podrobnosti - uživatel</h1>
            </div>
        </div>
        <div class="vyvysenyBod"></div>
    </div>
</div>

<div id="shortBlok">
    <div style="padding: 10px;">
        <div>
            <div class="mN">
                <label asp-for="jmeno">Jméno</label>
            </div>
            <div class="detailBlok">
                <div class="detailSEditem">
                    <div class="mD">
                        <input asp-for="jmeno" class="textPole" readonly="readonly" />
                    </div>
                    <div id="edit">
                        <a asp-action="Edit" asp-route-id="@Model.idUzivatele"><div id="editIkona"></div></a>
                    </div>
                </div>
            </div>
            <div class="mN">
                <label asp-for="prijmeni">Příjmení</label>
            </div>
            <div class="mD">
                <input asp-for="prijmeni" class="textPole" />
            </div>
            <div class="mN">
                <label asp-for="stredisko">Středisko</label>
            </div>
            <div class="mD">
                <input asp-for="stredisko" class="textPole" />
            </div>
            <div class="mN">
                <label asp-for="email">E-mail</label>
            </div>
            <div class="mD">
                <input asp-for="email" class="textPole" readonly="readonly" />
            </div>
            <div class="mN">
                <label asp-for="jazyk.nazev">Jazyk</label>
            </div>
            <div class="mD">
                <input asp-for="jazyk.nazev" class="textPole" readonly="readonly" />
            </div>
            <div class="mN">
                <label asp-for="nt">Uživatelské jméno</label>
            </div>
            <div class="mD">
                <input asp-for="nt" class="textPole" readonly="readonly" />
            </div>
            <div class="mN">
                <label asp-for="heslo">Heslo</label>
            </div>
            <div class="mD">
                <input asp-for="heslo" class="textPole" readonly="readonly" />
            </div>
        </div>
        <div id="tlacitkaPopisku">
            <a asp-action="Index" class="tlacitkoReset">Zpět</a>

        </div>
    </div>
</div>

